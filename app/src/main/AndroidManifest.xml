<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maryannenjuguna.thecatapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/kitty"
        android:label="@string/AppName"
        android:roundIcon="@drawable/kitty"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheCatApi"
        tools:targetApi="31">
        <activity
            android:name=".ui.loginsignup.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.loginsignup.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.maryannenjuguna.thecatapi.ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.TheCatApi2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BreedsActivity"
            android:exported="false"
            android:label="@string/AppName"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:parentActivityName=".ui.BreedsActivity"
            android:theme="@style/Theme.TheCatApi2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>